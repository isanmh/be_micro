<div class="d-flex justify-content-between">
  <h1>Daftar Kontak</h1>
  <div class="py-3">
    <a href="/contacts/create" class="btn btn-primary">Tambah Data</a>
  </div>
</div>
<!-- pesan flash -->
<% if (message.success) { %>
<div class="alert alert-success alert-dismissible fade show my-4" role="alert">
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
  <strong><%= message.success %> </strong>
</div>
<% } %>

<!-- form search -->
<form action="/contacts/search" method="GET">
  <div class="input-group mb-3">
    <input
      type="text"
      class="form-control"
      placeholder="Cari kontak"
      aria-label="Recipient's username"
      aria-describedby="button-addon2"
      name="keyword"
    />
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
      Cari
    </button>
  </div>
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach((item, index) => { %>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= item.name %></td>
      <td><%= item.email %></td>
      <td><%= item.phone %></td>
      <td>
        <div class="d-flex justify-content-center">
          <a href="/contacts/edit/<%= item.id %>" class="btn btn-warning mx-2"
            >Edit</a
          >
          <form
            action="/contacts/delete/<%= item.id %>?_method=DELETE"
            method="POST"
          >
            <button
              class="btn btn-primary"
              onclick="return confirm('Yakin ingin menghapus?')"
            >
              Delete
            </button>
          </form>
        </div>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
